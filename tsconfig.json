{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": "./",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "**/*.ts"
    ]
  }